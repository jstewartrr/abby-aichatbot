# ===========================================
# ABBI HiveMind Chat - Environment Variables
# ===========================================

# Registration and login
ALLOW_EMAIL_LOGIN=true
ALLOW_REGISTRATION=true
ALLOW_SOCIAL_LOGIN=false

# Session
SESSION_EXPIRY=1000 * 60 * 15
REFRESH_TOKEN_EXPIRY=(1000 * 60 * 60 * 24) * 7

# MongoDB
MONGO_URI=mongodb://mongodb:27017/LibreChat

# Domain
DOMAIN_CLIENT=http://localhost:3080
DOMAIN_SERVER=http://localhost:3080

# Search
MEILI_HOST=http://meilisearch:7700
MEILI_MASTER_KEY=your_meilisearch_key_here

# App title
APP_TITLE=ABBI HiveMind Chat

# ===========================================
# AI MODEL API KEYS
# ===========================================

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI (GPT-4o)
OPENAI_API_KEY=your_openai_key_here

# Google AI Studio (Gemini)
GOOGLE_KEY=your_google_key_here

# Vertex AI (Google Cloud)
VERTEX_API_KEY=your_vertex_key_here
VERTEX_PROJECT_ID=your_gcp_project_id
VERTEX_REGION=us-central1

# AWS Bedrock
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Azure OpenAI / GitHub Copilot
AZURE_OPENAI_API_KEY=your_azure_key_here
AZURE_OPENAI_ENDPOINT=your_azure_endpoint
AZURE_DEPLOYMENT_NAME=gpt-4o

# Grok (xAI)
XAI_API_KEY=your_xai_key_here

# DeepSeek
DEEPSEEK_API_KEY=your_deepseek_key_here

# Mistral AI
MISTRAL_API_KEY=your_mistral_key_here

# Perplexity
PERPLEXITY_API_KEY=your_perplexity_key_here

# Cohere
COHERE_API_KEY=your_cohere_key_here

# ===========================================
# LOCAL MODELS
# ===========================================

# Ollama (via Tailscale)
OLLAMA_BASE_URL=http://100.x.x.x:11434
